<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="@dimen/drawer_header_height"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@drawable/drawer_background"
             android:clickable="true">

    <LinearLayout
        android:id="@+id/global_drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/drawer_header_default_padding"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_header_user_avatar"
            android:layout_width="@dimen/global_menu_avatar_size"
            android:layout_height="@dimen/global_menu_avatar_size"
            android:src = "@drawable/default_avatar"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/drawer_header_text"
            android:layout_marginBottom="@dimen/drawer_header_default_padding" />

        <TextView
            android:id="@+id/drawer_header_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Ruoyan Liu"
            android:textColor="@color/drawer_header_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/drawer_header_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="ID: rocky_liu"
            android:textColor="@color/drawer_header_text"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#dddddd" />
</FrameLayout>